  <!-- Contenedor para los elementos del lado derecho -->
  <div class="d-flex flex-row align-items-end gap-2">
    <% if (user && user.rol === 'cliente' && user.pro === true) { %>
      <form action="/hire-modules/cancel-modules" method="POST" class="mb-0">
        <button type="submit" class="btn btn-danger">Cancelar suscripci√≥n</button>
      </form>
    <% } %>
    <% if (user.rol === "cliente") { %>
      <div class="alert alert-info py-1 px-2 m-0">
        Usuario: <%= user.name %> | Rol: <%= user.rol %> | PRO: <%= user.pro %>
      </div>
    <% } %>
  </div>
</header>
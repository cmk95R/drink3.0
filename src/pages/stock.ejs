<!DOCTYPE html>
<html lang="es">

<head>
    <title>Gestión de Productos</title>
    <%- include('partials/head') %>
</head>

<body class="bg-light background-pattern">
    <!-- HEADER -->
    <%- include('partials/header') %>

        <!-- LAYOUT -->
        <div class="container-fluid ">
            <div class="row">
                <!-- SIDEBAR -->
                <%- include('partials/aside') %>

                    <!-- MAIN CONTENT -->
                    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h2 class="mb-0"><i class="fa-solid fa-list-check text-primary"></i>Lista de Productos</h2>
                            <div class="form-outline" data-mdb-input-init>
                                <input type="search" id="form1" class="form-control" placeholder="Search products..." aria-label="Search" />
                            </div>
                        </div>

                        <!-- RENDERIZADO DE CARDS DE STOCK -->
                        <div class="row row-cols-1 row-cols-md-3 g-4">
                            <% products.forEach(product=> { %>
                                <div class="col" data-name="<%= product.name.toLowerCase() %>">
                                    <!-- Acá se abren los modales individuales -->
                                    <a data-bs-toggle="modal" data-bs-target="#detalleProducto-<%= product._id %>" class="text-decoration-none text-dark">
                                        <div class="card h-100 hover-shadow">
                                            <% if (product.image) { %>
                                                <img src="/uploads/<%= product.image %>" class="card-img-top"
                                                    alt="Imagen de <%= product.name %>">
                                                <% } else { %>
                                                    <div class="card-img-top d-flex align-items-center justify-content-center bg-light"
                                                        style="height: 200px;">
                                                        <span class="text-muted">Sin imagen</span>
                                                    </div>
                                                    <% } %>

                                                        <div class="card-body">
                                                            <h5 class="card-title">
                                                                <%= product.name %>
                                                            </h5>
                                                            <p class="card-text mb-2">
                                                                <strong>Stock:</strong>
                                                                <%= product.stock %><br>
                                                                    <strong>Categoría:</strong>
                                                                    <%= product.category %><br>
                                                            </p>
                                                            <span
                                                                class="badge <%= product.isAvailable ? 'bg-success' : 'bg-secondary' %>">
                                                                <%= product.isAvailable ? 'Disponible' : 'No disponible'
                                                                    %>
                                                            </span>
                                                        </div>
                                        </div>
                                    </a>
                                </div>
                                <% }) %>
                        </div>


                    </main>
            </div>
        </div>

<!-- Modal individual del producto -->
 <% products.forEach(product => { %>
  <div class="modal fade" id="detalleProducto-<%= product._id %>" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><%= product.name %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <% if (product.image) { %>
            <img src="/uploads/<%= product.image %>" alt="Imagen de <%= product.name %>" class="img-fluid mb-3" />
          <% } %>
          <p><strong>Stock:</strong> <%= product.stock %></p>
          <p><strong>Categoría:</strong> <%= product.category %></p>
          <p><strong>Disponible:</strong> <%= product.isAvailable ? 'Sí' : 'No' %></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        </div>
      </div>
    </div>
  </div>
<% }) %>

        <script src="/docs/5.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
        <script src="../resources/js/searchProducts.js"></script>
        <script src="../resources/js/modals/productModal.js"></script>
</body>

</html>
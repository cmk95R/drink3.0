<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('partials/head') %>
</head>

<body>
    <header>
        <div class="container-header">
            <div>
                <h1><a href="/">Drink in the House</a></h1>
            </div>
            <div class="container-listas">
                <ul class="box-listas">
                    <li class="listas" style="margin-bottom: 5px;"><a href="/auth/register">REGISTRO DE USUARIOS</a>
                    </li>
                    <li class="listas"><a href="/auth/profile">INICIO DE SESIÓN</a></li>
                </ul>
            </div>
        </div>
    </header>

    <main>
        <form action="/auth/register" method="POST">
            <h2 class="Registro">Regístrese</h2>

            <!-- Nombre -->
            <input type="text" placeholder="Nombre de usuario" id="name" name="name"
                value="<%= formData && formData.name ? formData.name : '' %>" />

            <!-- Email -->
            <input type="email" placeholder="Email" id="email" name="email"
                value="<%= formData && formData.email ? formData.email : '' %>" />

            <!-- Rol -->
            <input type="text" placeholder="Rol" id="rol" name="rol"
                value="<%= formData && formData.rol ? formData.rol : '' %>" />

            <!-- Contraseña -->
            <input type="password" placeholder="Contraseña" id="password" name="password" />

            <!-- Edad -->
            <input type="number" placeholder="Edad" id="edad" name="edad"
                value="<%= formData && formData.edad ? formData.edad : '' %>" />

            <!-- Mostrar errores -->
            <% if (errors && errors.length> 0) { %>
                <div class="error-container">
                    <ul>
                        <% errors.forEach(error=> { %>
                            <li class="error-message">
                                <%= error.msg %>
                            </li>
                            <% }); %>
                    </ul>
                </div>
                <% } %>

                    <button type="submit">Enviar</button>
                    <br />
                    <a href="javascript:history.back()" class="btn">VOLVER</a>
        </form>
    </main>    
</body>

</html>
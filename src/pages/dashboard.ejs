<h1>Bienvenido <%= user.name %> al Dashboard</h1>

<h2>Productos</h2>
<ul>
  <% productos.forEach(producto => { %>
    <li><%= producto.name %> - Stock: <%= producto.stock %></li>
  <% }) %>
</ul>

